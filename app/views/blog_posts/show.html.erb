<style>
  body { font-family: sans-serif; line-height: 1.6; color: #333; max-width: 800px; margin: 40px auto; padding: 0 20px; }
  h1, h2, h3 { color: #111; }
  .post-header h1 { font-size: 2.5em; margin-bottom: 10px; }
  .post-meta { color: #666; margin-bottom: 30px; }
  .post-content { margin-top: 20px; }
  .post-content h2 { margin-top: 40px; font-size: 1.8em; }
  .post-content h3 { margin-top: 30px; font-size: 1.4em; }
  .post-content pre { background-color: #f5f5f5; padding: 15px; border-radius: 5px; overflow-x: auto; }
  .post-content code { font-family: monospace; }
  .back-link { display: inline-block; margin-bottom: 40px; }
  a { text-decoration: none; color: #007bff; }
  a:hover { text-decoration: underline; }
</style>

<%= link_to "← Voltar para a lista", root_path, class: "back-link" %>

<article>
  <header class="post-header">
    <h1><%= @blog_post.title %></h1>
    <div class="post-meta">
      <span>Publicado em <%= l @blog_post.date, format: :long %></span><br>
      <% if @blog_post.categories.any? %>
        <span>Categorias: <%= @blog_post.categories.join(', ') %></span><br>
      <% end %>
      <% if @blog_post.tags.any? %>
        <span>Tags: <%= @blog_post.tags.join(', ') %></span>
      <% end %>
    </div>
  </header>

  <div class="post-content">
    <%= @blog_post.html_content %>
  </div>
</article>

