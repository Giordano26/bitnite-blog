<style>
  body { font-family: sans-serif; line-height: 1.6; color: #333; max-width: 800px; margin: 40px auto; padding: 0 20px; }
  h1, h2, h3 { color: #111; }
  h1 { font-size: 2.5em; text-align: center; margin-bottom: 40px; }
  h2 { font-size: 2em; margin-top: 40px; border-bottom: 2px solid #eee; padding-bottom: 10px; }
  h3 { font-size: 1.5em; margin-top: 30px; }
  ul { list-style: none; padding-left: 0; }
  li { margin-bottom: 10px; }
  a { text-decoration: none; color: #007bff; }
  a:hover { text-decoration: underline; }
</style>

<h1>Bitnite</h1>

<% if @grouped_blogposts.empty? %>
  <p>Nenhum post encontrado.</p>
<% else %>
  <% @grouped_blogposts.sort.reverse.to_h.each do |year, months| %>
    <h2><%= year %></h2>
    <% months.each do |month, posts| %>
      <h3><%= month.capitalize %></h3>
      <ul> 
        <% posts.each do |post| %>
          <li>
            <%= link_to post.title, blog_post_path(post) %>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
<% end %>
